{
  "mcpServers": {
    "crawl4ai": {
      "command": "wsl",
      "args": [
        "-e",
        "bash",
        "-c",
        "cd /home/user/prj/crawl && source venv/bin/activate && python -m crawl4ai_mcp.server"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "DEBUG"
      },
      "llm_config": {
        "default_provider": "openai",
        "default_model": "gpt-4.1",
        "providers": {
          "openai": {
            "api_key": null,
            "api_key_env": "OPENAI_API_KEY",
            "base_url": null,
            "models": ["gpt-4o", "gpt-4o-mini", "gpt-4-turbo"]
          },
          "anthropic": {
            "api_key": null,
            "api_key_env": "ANTHROPIC_API_KEY",
            "base_url": null,
            "models": ["claude-3-5-sonnet-20241022", "claude-3-haiku-20240307"]
          },
          "ollama": {
            "api_key": null,
            "api_key_env": null,
            "base_url": "http://localhost:11434",
            "models": ["llama3.3", "qwen2.5"]
          },
          "aoai": {
            "api_key": null,
            "api_key_env": "AZURE_OPENAI_API_KEY",
            "base_url": null,
            "base_url_env": "AZURE_OPENAI_ENDPOINT",
            "api_version": "2025-04-01-preview",
            "models": ["gpt-4.1", "gpt-4.1-nano", "o4-mini", "o3", "o3-mini", "o1", "o1-mini", "gpt-4o", "gpt-4o-mini", "gpt-4-turbo", "gpt-35-turbo"]
          }
        }
      }
    }
  }
}